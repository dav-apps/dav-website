{
	"name": "dav-website",
	"version": "2.1.0",
	"type": "module",
	"scripts": {
		"start": "node dist/server.js",
		"build": "npm install && tsc && npm run parcel:build",
		"build:watch": "concurrently 'npm:tsc:watch' 'npm:server:watch'",
		"tsc:watch": "tsc -w",
		"parcel:build": "npx parcel build 'src/pages/**/*.html' --dist-dir dist/src/pages",
		"parcel:watch": "npx parcel watch 'src/pages/**/*.html' --dist-dir dist/src/pages",
		"server:watch": "nodemon dist/server.js"
	},
	"dependencies": {
		"@fortawesome/fontawesome-pro": "^6.1.1",
		"@material/snackbar": "^13.0.0",
		"axios": "^0.26.1",
		"bootstrap": "^5.1.3",
		"chart.js": "^3.7.1",
		"cropperjs": "^1.5.12",
		"crypto-js": "^4.1.1",
		"dav-js": "git+https://github.com/dav-apps/dav-js.git#v2.6.2",
		"dav-ui-components": "git+https://github.com/dav-apps/dav-ui-components.git#v0.9",
		"ejs": "^3.1.6",
		"express": "^4.17.3",
		"luxon": "^2.3.1",
		"office-ui-fabric-core": "^11.0.0",
		"stripe": "^8.212.0",
		"typescript": "^4.7.4"
	},
	"devDependencies": {
		"@parcel/transformer-sass": "^2.7.0",
		"@types/crypto-js": "^4.1.1",
		"@types/express": "^4.17.13",
		"@types/luxon": "^2.3.1",
		"@types/node": "^18.6.2",
		"concurrently": "^7.3.0",
		"cpx": "^1.5.0",
		"dotenv": "^16.0.0",
		"nodemon": "^2.0.20",
		"parcel": "^2.7.0",
		"parcel-resolver-exclude-assets": "^2.0.0",
		"posthtml-include": "^1.7.4",
		"sharp": "^0.29.3"
	},
	"targets": {
		"browser": {
			"includeNodeModules": true,
			"optimize": true
		}
	},
	"resolverExcludeAssets": [
		"<%"
	],
	"alias": {
		"process": false,
		"buffer": false
	}
}
