{
	"name": "dav-website",
	"version": "2.0.0",
	"type": "module",
	"scripts": {
		"start": "node dist/server.js",
		"build": "npm install && tsc && npm run parcel:build",
		"build:watch": "concurrently 'npm:tsc:watch' 'npm:server:watch'",
		"tsc:watch": "tsc -w",
		"parcel:build": "npx parcel build 'src/pages/**/*.html' --dist-dir dist/src/pages",
		"parcel:watch": "npx parcel watch 'src/pages/**/*.html' --dist-dir dist/src/pages",
		"server:watch": "nodemon dist/server.js"
	},
	"dependencies": {
		"@fortawesome/fontawesome-pro": "^5.15.4",
		"axios": "^0.25.0",
		"bootstrap": "^5.1.3",
		"chart.js": "^3.7.0",
		"dav-js": "git+https://github.com/dav-apps/dav-js.git#v2.2",
		"dav-ui-components": "git+https://github.com/dav-apps/dav-ui-components.git#v0.8.2",
		"ejs": "^3.1.6",
		"express": "^4.17.2",
		"luxon": "^2.3.0",
		"office-ui-fabric-core": "^11.0.0",
		"stripe": "^8.201.0",
		"typescript": "^4.5.5"
	},
	"devDependencies": {
		"@parcel/transformer-sass": "^2.2.1",
		"@types/crypto-js": "^4.1.0",
		"@types/express": "^4.17.13",
		"@types/luxon": "^2.0.9",
		"@types/node": "^16.11.11",
		"concurrently": "^7.0.0",
		"cpx": "^1.5.0",
		"dotenv": "^14.3.2",
		"parcel": "^2.2.1",
		"posthtml-include": "^1.7.2",
		"sharp": "^0.29.3"
	},
	"targets": {
		"browser": {
			"includeNodeModules": true,
			"optimize": true
		}
	},
	"engines": {
		"node": "14.x",
		"npm": "8.x"
	}
}
