{
	"name": "dav-website-server",
	"version": "0.0.0",
	"type": "module",
	"scripts": {
		"start": "node dist/src/server.js",
		"build:watch": "concurrently 'npm:copy-assets:watch' 'npm:tsc:watch' 'npm:server:watch'",
		"copy-assets:watch": "cpx 'assets/**/*.{js,png}' dist/assets -w",
		"tsc:watch": "tsc -w",
		"parcel:pages:watch": "npx parcel watch 'src/pages/**/*.html' --dist-dir dist/src/pages",
		"server:watch": "nodemon dist/server.js"
	},
	"dependencies": {
		"dav-js": "git+https://github.com/dav-apps/dav-js.git#v2.1.1",
		"dav-ui-components": "git+https://github.com/dav-apps/dav-ui-components.git#v0.7.6",
		"express": "^4.17.1",
		"socket.io": "^4.4.0",
		"stripe": "^8.191.0",
		"typescript": "^4.5.2"
	},
	"devDependencies": {
		"@types/express": "^4.17.13",
		"@types/node": "^16.11.11",
		"concurrently": "^6.4.0",
		"cpx": "^1.5.0",
		"dotenv": "^10.0.0",
		"parcel": "^2.0.1"
	}
}
